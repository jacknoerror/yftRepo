<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/common_margin" >

        <LinearLayout
            style="@style/MatchWidthOnly"
            android:orientation="horizontal"
            android:padding="@dimen/common_margin" >

            <TextView
                android:id="@+id/tvbtn_a1"
                style="@style/TextView_inMain_top"
                android:drawableTop="@drawable/selector_main_a1"
                android:text="@string/subname_main_a1" />

            <TextView
                android:id="@+id/tvbtn_a2"
                style="@style/TextView_inMain_top"
                android:drawableTop="@drawable/selector_main_a2"
                android:text="@string/subname_main_a2" />

            <TextView
                android:id="@+id/tvbtn_a3"
                style="@style/TextView_inMain_top"
                android:drawableTop="@drawable/selector_main_a3"
                android:text="@string/subname_main_a3" />
        </LinearLayout>

        <View style="@style/DividerInMain_H" />

        <LinearLayout
            style="@style/MatchWidthOnly"
            android:orientation="horizontal"
            android:padding="@dimen/common_margin" >

            <TextView
                android:id="@+id/tvbtn_b1"
                style="@style/TextView_inMain_top"
                android:drawableTop="@drawable/main_b1"
                android:text="@string/title_b1" />

            <TextView
                android:id="@+id/tvbtn_b2"
                style="@style/TextView_inMain_top"
                android:drawableTop="@drawable/main_b2"
                android:text="@string/title_b2" />

            <TextView
                android:id="@+id/tvbtn_b3"
                style="@style/TextView_inMain_top"
                android:drawableTop="@drawable/main_b3"
                android:text="@string/title_b3" />
        </LinearLayout>

        <LinearLayout
            style="@style/MatchWidthOnly"
            android:orientation="horizontal"
            android:padding="@dimen/common_margin" >

            <TextView
                android:id="@+id/tvbtn_b4"
                style="@style/TextView_inMain_top"
                android:drawableTop="@drawable/main_b4"
                android:text="@string/title_b4" />

            <TextView
                android:id="@+id/tvbtn_b5"
                style="@style/TextView_inMain_top"
                android:drawableTop="@drawable/main_b5"
                android:text="@string/title_b5" />

            <TextView
                android:id="@+id/tvbtn_b6"
                style="@style/TextView_inMain_top"
                android:drawableTop="@drawable/main_b6"
                android:text="@string/title_b6" />
        </LinearLayout>

        <View style="@style/DividerInMain_H" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:padding="@dimen/common_margin" 
            android:layout_marginTop="-4dp"
            >

            <TextView
                android:id="@+id/tvbtn_c1"
                style="@style/TextView_inMain_left"
                android:drawableLeft="@drawable/person_myshop"
                android:text="我的商铺" 
                />

            <View style="@style/DividerInMain_V" />

            <TextView
                android:id="@+id/tvbtn_c2"
                style="@style/TextView_inMain_left"
                android:drawableLeft="@drawable/person_mycollection"
                android:text="我的收藏" />

            <View style="@style/DividerInMain_V" />

            <TextView
                android:id="@+id/tvbtn_c3"
                style="@style/TextView_inMain_left"
                android:drawableLeft="@drawable/person_myfriends"
                android:text="我的人脉" />
        </LinearLayout>
    </LinearLayout>

</merge>