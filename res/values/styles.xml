<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="mystyle" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>  //进入时的动画
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>    //退出时的动画
    </style>
    
    <style name="WrapAll">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchWidthOnly">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="DividerWH">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@drawable/divider_h_grey</item>
    </style>
    <style name="DividerInMain_H">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@drawable/divider_h</item>
        <item name="android:layout_margin">@dimen/common_margin_bigger</item>
    </style>
    <style name="DividerInMain_V">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/divider_v</item>
    </style>
    <style name="TextView_inMain" parent="WrapAll">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="TextView_inMain_top" parent="TextView_inMain">
        <item name="android:drawablePadding">@dimen/common_margin_bigger</item>
    </style>
    <style name="TextView_inWork_top" parent="TextView_inMain">
        <item name="android:drawablePadding">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginTop">@dimen/common_margin_bigger</item>
        
    </style>
    <style name="TextView_inMain_left" parent="TextView_inMain">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_main_c_bg</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/common_margin_bigger</item>
        <item name="android:paddingRight">@dimen/common_margin_bigger</item>
        <item name="android:lines">1</item>
    </style>
    <style name="RadioButton_sub" parent="WrapAll">
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/selector_radio_bg</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/common_margin</item>
        <item name="android:layout_margin">0.5dp</item>
        <item name="android:textColor">@color/selector_radio_textcolor</item>
    </style>
    <style name="RadioButton_subleft" parent="RadioButton_sub">
        <item name="android:background">@drawable/selector_radio_bg_left</item>
        </style>
    <style name="RadioButton_subright" parent="RadioButton_sub">
        <item name="android:background">@drawable/selector_radio_bg_right</item>
        </style>
   <style name="TextView_ItemTitle" parent = "WrapAll">
        
        
        <item name="android:textColor">@color/textcolor_dark</item>
        <item name="android:textSize">@dimen/textsize_r_bigger</item>
        <item name="android:padding">@dimen/common_margin_bigger</item>
   </style>
    
</resources>
