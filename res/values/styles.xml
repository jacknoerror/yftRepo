<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    
<!-- 	        <item name="android:layout_width">match_parent</item>
	        <item name="android:layout_height">match_parent</item> -->
	        <style name="TitleBlue">
	            <item name="android:layout_width">match_parent</item>
		        <item name="android:layout_height">@dimen/v_height_titlebar_large</item>
		        <item name="android:background">@drawable/navbg</item>
	        </style>
	 <style name="TitleBlueTextView" parent="TitleBlue">
        <item name="android:textSize">@dimen/textsize_title</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>
    <!-- 0507 -->
    <style name="TitleNotBlueTextView" >
        <item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">@dimen/v_height_titlebar_large</item>
        <item name="android:textSize">@dimen/textsize_title</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>
    
    
	<style name="Information_content">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:text">@string/add_default</item>
	    <item name="android:layout_marginLeft">10dp</item>
	    <item name="android:textColor">@android:color/black</item>
	</style>
	
	    <style name="Information_content_title">
	        <item name="android:layout_width">@dimen/bar_long</item>
	        <item name="android:layout_height">wrap_content</item>
	        <item name="android:gravity">right</item>
	        <item name="android:textColor">#333333</item>
	        <item name="android:layout_marginLeft">-18dp</item>
	    </style>
	    <style name="Information_item_layout">
	        <item name="android:layout_width">match_parent</item>
	        <item name="android:layout_height">wrap_content</item>
	        <item name="android:paddingTop">@dimen/activity_horizontal_margin</item>
	        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
	        <item name="android:paddingBottom">@dimen/activity_horizontal_margin</item>
	    </style>
	    <!-- android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow"
                android:contentDescription="@id/arrow"
                android:layout_alignParentRight="true" -->
	    <style name="Arrow">
	        <item name="android:layout_width">wrap_content</item>
	        <item name="android:layout_height">wrap_content</item>
	        <item name="android:layout_alignParentRight">true</item>
	        <item name="android:src">@drawable/arrow</item>
	    </style>
	    <style name="Image_itemleft">
	        <item name="android:layout_width">@dimen/h_size_lefticon</item>
	        <item name="android:layout_height">@dimen/h_size_lefticon</item>
	        <item name="android:contentDescription">@id/img_item_company</item>
	        <item name="android:src">@drawable/load_default</item>
	        <item name="android:scaleType">centerCrop</item>
	        <item name="android:adjustViewBounds">true</item>
	        <item name="android:layout_gravity">center_vertical</item>
    </style>
	    
	 <style name="chat_text_date_style">
        <item name="android:padding">2dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/chat_send_time_bg</item>
    </style>
    
	 <style name="chat_content_date_style">
        <item name="android:minHeight">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">15dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">#bfbfbf</item>
    </style>
    <style name="Nodata_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">#ffffff</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="Nodata_imageview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="Divider_horizontal"         >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/divider_h</item>
    </style>
    <style name="Divider_horizontal_shortleft" parent="Divider_horizontal">
        <item name="android:layout_marginLeft">@dimen/h_margin_side</item>
    </style>
    <style name="PersonDetail_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/v_height_titlebar</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/bg_grey</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/h_margin_side</item>
    </style>
    <style name="PersonDetail_contentLeft">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:padding">5dip</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">@dimen/h_margin_side</item>
        <item name="android:layout_marginRight">@dimen/common_margin</item>
    </style>
    <style name="PersonDetail_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/v_height_titlebar_middle</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="PersonDetail_contentRight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dip</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#555</item>
    </style>
</resources>
