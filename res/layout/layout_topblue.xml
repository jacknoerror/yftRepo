<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/v_height_titlebar_middle"
    android:background="@color/titleblue"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/btn_top_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/common_margin_bigger"
        android:layout_marginRight="@dimen/common_margin"
        android:src="@drawable/btn_back" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/common_margin" >

        <EditText
            android:id="@+id/edit_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:drawableLeft="@drawable/ic_search"
            android:drawablePadding="@dimen/common_margin"
            android:hint="输入要搜索的内容"
            android:inputType="text" />

        <ImageView
            android:id="@+id/img_top_cls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_margin"
            android:src="@drawable/ic_clear"
            android:visibility="invisible" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_gosearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/common_margin_bigger"
        android:text="搜索"
        android:textColor="@color/selector_common_white_grey_textcolor"
        android:textSize="@dimen/textsize_detail_normal" />

</LinearLayout>