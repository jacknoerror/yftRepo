<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/common_margin" >

        <TextView
            android:id="@+id/tv_item_order_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/order_home"
            android:drawablePadding="@dimen/common_margin"
            android:text="中俄天然气贸易合同"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textsize_r_bigger"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_item_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/order_state"
            android:drawablePadding="@dimen/common_margin"
            android:text="卖家已经确认订单"
            android:textColor="@color/textcolor_light"
            android:textSize="@dimen/textsize_detail_normal" />
    </LinearLayout>

    <View style="@style/DividerWH" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/common_margin" >

        <ImageView 
            android:id="@+id/img_item_left"
            style="@style/Image_itemleft" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/common_margin"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_item_order_desc"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="2"
                android:textColor="@color/textcolor_dark"
                android:textSize="@dimen/textsize_detail_normal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_item_order_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/down_orange"
                    android:textSize="@dimen/textsize_r_bigger" />

                <TextView
                    android:id="@+id/tv_item_order_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="共4种产品"
                    android:textColor="@color/textcolor_light" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>