<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_field_white_grey"
    android:padding="@dimen/common_margin"
    >
    
    <ImageView 
        android:id="@+id/img_item_person_left"
        android:layout_width="@dimen/v_height_bar"
        android:layout_height="@dimen/v_height_bar"
        android:contentDescription="@id/img_item_person_left"
        android:layout_margin="@dimen/h_margin_side"
        android:padding="@dimen/common_margin"
        android:layout_centerVertical="true"
        />
    <TextView 
        android:id="@+id/tv_item_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_item_person_left"
        android:textColor="@android:color/black"
        android:textSize="@dimen/textsize_r_bigger"
        android:layout_centerVertical="true"
        />
    <ImageView 
        android:id="@+id/img_item_person_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@id/img_item_person_right"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/common_margin"
        android:layout_centerVertical="true"
        />
    <ToggleButton 
        android:id="@+id/toggle_offline_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/common_margin"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:background="@drawable/selector_btn_offline"
	    android:textOn=""
	    android:textOff=""
        />
	<ProgressBar 
        android:id="@+id/progress_offline_person"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/common_margin"
        android:layout_centerVertical="true"
        android:visibility="gone"
        />
</RelativeLayout> 
